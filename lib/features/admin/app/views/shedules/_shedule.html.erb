        <%="<tr id='t_" + elmnt['day'] + "'>" %>
          <%="<td name=" + elmnt['day'] + ">" %><%= elmnt['day']%></td>
          <%="<td name=" + elmnt['day'] + ">" %><%= to_hour(elmnt['morning_start'].to_f) unless elmnt['morning_start'].nil? %></td>
