<%= order_header %>

<%= generate_invoice_contextual_menu_partial %>

<%= title "Annuler cette facture" %>

<div class="presentation_medium">
  <%= render :partial => 'invoices_list', :object => [ Invoice.find(@invoice.id) ] %>
  
	<% form_for @invoice, :url => { :controller => "invoices", :action => "cancel", :order_id => @order.id }, :method => :put do |form| %>
    <%= form.error_messages %>
    <p>
      <%= form.label :cancelled_comment, nil, :required => :required %>
      <%= form.text_area_autoresize :cancelled_comment %>
    </p>
    
    <%= form.form_buttons(:only => [:reset, :submit]) %>
  <% end %>
</div>
