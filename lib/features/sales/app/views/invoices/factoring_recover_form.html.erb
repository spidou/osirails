<%= order_header %>

<%= generate_invoice_contextual_menu_partial %>

<%= javascript_include_tag 'sales/invoice' %>

<%= title "Signaler le définancement de la facture par le FACTOR" %>

<div class="presentation_medium">
  <%= render :partial => 'invoices_list', :object => [ Invoice.find(@invoice.id) ] %>
  
	<% form_for @invoice, :url => { :controller => "invoices", :action => "factoring_recover", :order_id => @order.id }, :html => { :onsubmit => 'return confirm("Attention !! Les informations que vous avez entrés ne pourront plus être modifié. Merci de vérifier les informations avant de valider. Êtes-vous sûr de vouloir continuer ?")', :method => :put } do |form| %>
    <div class="due_dates">
      <%= render :partial => 'factoring_recover', :collection => @invoice.due_dates %>
    </div>
    
    <%= form.form_buttons %>
  <% end %>
</div>
