<% quote = quote_aggregates %>

<tr class="aggregates">
  <td colspan="6">&nbsp;</td>
  <td colspan="4">
    <table class="aggregates no_nth">
      <tbody>
        <tr>
          <td class="aggregate_label">Total brut HT</td>
          <td class="aggregate_value">
            <span class="total" real-value="<%= quote.total %>"><%= quote.total.round_to(2).to_s(2) %></span>
          </td>
        </tr>
        <tr>
          <td class="aggregate_label">Remise (%)</td>
          <td class="aggregate_value">
            <span class="prizegiving"><%= form.form_or_view(form.text_field(:prizegiving, :value => quote.prizegiving_before_type_cast, :size => 5, :autocomplete => :off), quote.prizegiving.to_f.round_to(2).to_s(2)) %></span>
          </td>
        </tr>
        <tr>
          <td class="aggregate_label">Net HT</td>
          <td class="aggregate_value">
            <span class="net" real-value="<%= quote.net %>"><%= quote.net.round_to(2).to_s(2) %></span>
          </td>
        </tr>
        <tr>
          <td class="aggregate_label">Frais de port</td>
          <td class="aggregate_value">
            <span class="carriage_costs"><%= form.form_or_view(form.text_field(:carriage_costs, :value => quote.carriage_costs_before_type_cast, :size => 5, :autocomplete => :off), quote.carriage_costs.to_f.round_to(2).to_s(2)) %></span>
          </td>
        </tr>
        <tr>
          <td class="aggregate_label">Total taxes</td>
          <td class="aggregate_value">
            <span class="summon_of_taxes" real-value="<%= quote.summon_of_taxes %>"><%= quote.summon_of_taxes.round_to(2).to_s(2) %></span>
          </td>
        </tr>
        <tr class="highlight">
          <td class="aggregate_label">Net Ã  payer</td>
          <td class="aggregate_value">
            <span class="net_to_paid" real-value="<%= quote.net_to_paid %>"><%= quote.net_to_paid.round_to(2).to_s(2) %></span>&nbsp;&euro;
          </td>
        </tr>
      </tbody>
    </table>
  </td>
  
  <% if is_form_view? %>
    <td>&nbsp;</td>
  <% end %>
</tr>
