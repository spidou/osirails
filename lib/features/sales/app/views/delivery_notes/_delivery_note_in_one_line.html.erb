<%
delivery_note = delivery_note_in_one_line
order         = delivery_note.order
status        = delivery_note_status_text(delivery_note)

all_interventions = delivery_note.delivery_interventions.reject(&:new_record?)

interventions_limit = 2 # set up the number of interventions we want to display into the delivery_note line (set 0 to display all)
interventions = all_interventions[0..(interventions_limit-1)]

rowspan_value = all_interventions.size > interventions.size ? interventions_limit + 1 : interventions.size
rowspan = rowspan_value > 0 ? "rowspan=\"#{rowspan_value}\"" : ''

delivery_note_in_one_line_counter += 1 # add 1 because counter starts at 0 (since ~ rails 2.2.x)
odd_or_even = delivery_note_in_one_line_counter.odd? ? "odd" : "even"
tr_class = "#{delivery_note.status}_delivery_note"
%>

<tr class="delivery_note <%= odd_or_even %> <%= tr_class %>" title="<%= status %>">
  <td class="selector" <%= rowspan %>><%= context_menu(delivery_note, 'delivery_note') %></td>
  <td class="reference" <%= rowspan %>><%= link_to(delivery_note.reference, order_production_step_delivery_step_delivery_note_path(order, delivery_note)) %></td>
  <td class="published_on" <%= rowspan %>><%= delivery_note.published_on.humanize if delivery_note.published_on %></td>
  <td class="delivery_note_type" <%= rowspan %>><%= delivery_note.delivery_note_type.title %></td>
  <td class="number_of_pieces" <%= rowspan %>><%= "#{delivery_note.number_of_pieces} / #{delivery_note.signed_quote.number_of_pieces}" %></td>
  <% if interventions.empty? %>
    <td>-</td>
    <td>-</td>
  <% else %>
    <% intervention = interventions.shift %>
    <%= render :partial => 'delivery_interventions/delivery_intervention_in_one_line_in_delivery_note', :object => intervention %>
  <% end %>
  <td class="number_of_pieces" <%= rowspan %> ><%= "#{delivery_note.number_of_delivered_pieces} / #{delivery_note.number_of_pieces}" if delivery_note.delivered_delivery_intervention %></td>
  <td class="signed_on" <%= rowspan %> ><%= delivery_note.signed_on.humanize if delivery_note.signed_on %></td>
  <td class="status" <%= rowspan %> ><%= status %></td>
</tr>

<% for intervention in interventions %>
  <tr class="nested <%= odd_or_even %> <%= tr_class %>">
    <%= render :partial => 'delivery_interventions/delivery_intervention_in_one_line_in_delivery_note', :object => intervention %>
  </tr>
<% end %>

<% if all_interventions.size > interventions.size + 1 %>
  <tr class="nested <%= odd_or_even %> <%= tr_class %>">
    <td colspan="2"><%= link_to "Voir toutes les interventions", order_production_step_delivery_step_delivery_note_path(order, delivery_note, options = { :delivery_note_nav => 'interventions' }) %></td>
  </tr>
<% end %>
