      </tr>
      <tr>
        <td class="counter"><span><%= Factor.count %></span></td>
        <td class="link"><%= link_to "factors", factors_path %></td>
        <td class="actions"><%= link_to "", new_factor_path, 'data-icon' => :new %></td>
