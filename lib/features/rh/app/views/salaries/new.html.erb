<% title_context "Ressources Humaines" %>
<% title_context @employee.fullname %>
<%= title "Modifier le salaire" %>

<div class="presentation medium">

<% form_for([@employee, @salary]) do |form|%>
  <%= form.error_messages%>
  <p>
    <%= form.label(:gross_amount) %>
    <%= form.text_field(:gross_amount, :size => 8, :maxlength => 10) %>
  </p>
  
  <%= form.form_buttons %>
<% end %>
</div>
