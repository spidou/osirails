<h2>Mes demandes annulées</h2>

<% if cancelled_leave_requests.size > 0 %>

  <div>
    <table>
      <tr>
        <th>Date de début</th>
        <th>Date de fin</th>
        <th>Créée le</th>
        <th>Statut</th>
        <th>Actions</th>
      </tr>
      
      <% for leave_request in cancelled_leave_requests %>
        <tr>
          <td><%= leave_request.start_date.strftime("%A %d %B %Y") %></td>
          <td><%= leave_request.end_date.strftime("%A %d %B %Y") %></td>
          <td><%= leave_request.created_at.to_datetime.strftime("%A %d %B %Y à %Hh%M") %></td>
          <td><%= view_status(leave_request) %></td>
          <td>
            <%= leave_request_link(leave_request, :link_text => "") %>
          </td>
        </tr>
      <% end %>
      
    </table>
    <%= will_paginate cancelled_leave_requests, :prev_label => " << pr&eacute;c&eacute;dent", :next_label => "suivant >>" %>
  </div>
  
<% else %>

  <div>
    <p>Aucune demande annulée</p>
  </div>

<% end %>
