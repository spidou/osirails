<% if Menu.find_by_name('thirds').can_access?(current_user) %>
  <h2><%= image_tag("menus/thirds.png") %><%= link_to "Tiers", thirds_path %></h2>
  <table>
    <tbody>
    <% if Customer.can_view?(current_user) %>
      <tr>
        <td class="counter"><span><%= Customer.count %></span></td>
        <td class="link"><%= link_to "clients", customers_path %></td>
        <td class="actions"><%= new_customer_link(:link_text => "") %></td>
      </tr>
    <% end %>
    <% if Supplier.can_view?(current_user) %>
      <tr>
        <td class="counter"><span><%= Supplier.count %></span></td>
        <td class="link"><%= link_to "fournisseurs", suppliers_path %></td>
        <td class="actions"><%= new_supplier_link(:link_text => "") %></td>
      </tr>
    <% end %>
    <% if Factor.can_view?(current_user) %>
      <tr>
        <td class="counter"><span><%= Factor.count %></span></td>
        <td class="link"><%= link_to "factors", factors_path %></td>
        <td class="actions"><%= new_factor_link(:link_text => "") %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
